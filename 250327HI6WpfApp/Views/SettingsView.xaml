<UserControl x:Class="_250327HI6WpfApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <TextBlock Text="Setting" FontSize="24" Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="로봇 IP 주소:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="포트:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            </StackPanel>

            <TextBlock Text="설정이 자동으로 저장됩니다." Foreground="Gray" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>